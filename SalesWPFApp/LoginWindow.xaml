<Window x:Class="SalesWPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="LightCyan">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Login" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Username:"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>

            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,20"/>

            <Button Content="Login" Width="200" Click="LoginButton_Click"/>
            <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Margin="0,10,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
