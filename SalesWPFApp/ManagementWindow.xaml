<Window x:Class="SalesWPFApp.ManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="ManagementWindow" Height="450" Width="800">
    <Grid Background="LightCyan">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Management" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Member" Width="200" Click="MemberButton_Click" Margin="0,0,0,20"/>
            <Button Content="Product" Width="200" Click="ProductButton_Click" Margin="0,0,0,20"/>
            <Button Content="Category" Width="200" Click="CategoryButton_Click" Margin="0,0,0,20"/>
            <Button Content="Order" Width="200" Click="OrderButton_Click" Margin="0,0,0,20"/>
            <Button Grid.Row="3" x:Name="btnClose" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="80" Content="Close" Click="btnClose_Click" />
        </StackPanel>
    </Grid>
</Window>
